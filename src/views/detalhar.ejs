<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>PokeDex</title>
</head>
<body>
    <div class="container">
        <h1>PokeDex - Detalhar</h1>
        <div class="row">
            <div class="col-6 my-2">
                <a class="btn btn-primary" href="http://localhost:3000/" >Voltar</a>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <div class="card my-5">
                    <div class="card-header">
                        <div class="col-12 ">
                            <div class="row m-3">
                                <div class="col-4 d-flex align-items-center">
                                    <img src="<%= sprites.front_default%>" class="card-img-top" >
                                </div>
                                <div class="col-8 d-flex align-items-center">
                                    <h3 class="card-title px-3"><%= name %> | <%= id%></h3>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">
                                <p>Experiencia: <%= base_experience %></p>
                            </li>
                            <li class="list-group-item">
                                <p>Altura: <%= height %></p>
                            </li>
                            <li class="list-group-item">
                                <p>Peso: <%= weight %></p>
                            </li>
                            <li class="list-group-item">
                                <p>Peso: <%= weight %></p>
                            </li>
                            <li class="list-group-item">
                                <p>Tipos: </p>
                                <% types.forEach((el) => { %>
                                    
                                        <p>
                                            <pre>  - <%= el.type.name %></pre>
                                        </p>
                                    
                                <% }) %>
                            </li>
                            <li class="list-group-item">
                                <p>Status: </p>
                                <% stats.forEach((el) => { %>
                                    <p>
                                        <pre>   - <%= el.stat.name %>: <%= el.base_stat %></pre>
                                    </p>
                                <% }) %> 
                            </li>
                            <li class="list-group-item">
                                <p>Abilidades: </p>
                                <% abilities.forEach((el) => { %>                
                                    <p>
                                        <pre>   - <%= el.ability.name %></pre> 
                                    </p>
                                <% }) %>
                            </li>
                            <li class="list-group-item">
                                <p>Ataques: </p>
                                <% moves.forEach((el) => { %>
                                    <p>
                                        <pre>   => <%= el.move.name%></pre>
                                    </p>
                                <% }) %>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>